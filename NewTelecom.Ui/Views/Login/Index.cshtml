@{
    ViewBag.Title = "Acesso - New Telecom Manager";
}

<style>
    .login-form {
        width: 25rem;
        height: 18.75rem;
        position: fixed;
        top: 50%;
        margin-top: -9.375rem;
        left: 50%;
        margin-left: -12.5rem;
